<ui:FluentWindow
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="SpecterInsightKeygen.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SpecterInsightKeygen"
        mc:Ignorable="d"
        Title="Main" MinHeight="600" MinWidth="800" MaxHeight="600" MaxWidth="800">
    <StackPanel Background="#1e1e1e">
        <ui:TitleBar Title="SpecterInsight C2 Keygen" Foreground="White" ShowClose="True" ShowHelp="False" ShowMaximize="False" ShowMinimize="False" />
        <Grid Margin="5">
            <Border BorderThickness="0,0,0,2"
                    BorderBrush="CadetBlue">
                <Grid Height="470"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="5"
                      >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="3"
                        HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                       Content="Name"/>
                    <ui:TextBox x:Name="NameInput" Grid.RowSpan="2"  Grid.Row="4" Grid.ColumnSpan="3"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderBrush="CadetBlue"
                                BorderThickness="2"
                                Padding="1"
                                Margin="20,0,20,0"/>
                    <Label Grid.RowSpan="2" Grid.Row="7" Grid.ColumnSpan="3"
                            HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                           Content="Email"/>
                    <ui:TextBox x:Name="EmailInput" Grid.RowSpan="2" Grid.Row="9" Grid.ColumnSpan="3"
                                Padding="1"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="20,0,20,0"
                        BorderBrush="CadetBlue"
                        BorderThickness="2"
                                />
                    <Label Grid.RowSpan="2" Grid.Row="12" Grid.ColumnSpan="3"
                        HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                       Content="Certificate and Password"/>
                    <ui:Button x:Name="CertChooserButton" Grid.RowSpan="2"
                               Grid.ColumnSpan="3"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               VerticalContentAlignment="Center"
                               HorizontalContentAlignment="Center"
                       Grid.Column="0"
                       Grid.Row="14"
                       Margin="20,0,20,0"
                       Content="Certificate (.p12)"
                        BorderBrush="CadetBlue"
                        BorderThickness="2" Click="CertChooserButton_Click"
                       />
                    <ui:PasswordBox x:Name="CertPassBox" Grid.RowSpan="2"
                                    Grid.Row="17" Grid.ColumnSpan="3"
                                    Padding="1"
                                    HorizontalContentAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Margin="20,0,20,0"
                                    BorderBrush="CadetBlue"
                                    BorderThickness="2"/>
                    <ui:Button x:Name="GenButton" Grid.RowSpan="2"  HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                       Grid.Column="1" Grid.ColumnSpan="1"
                       Grid.Row="21"
                       Content="GENERATE"
                        BorderBrush="CadetBlue"
                        BorderThickness="2" Click="Button_Click"
                       />
                    <ui:Button x:Name="SaveButton"  HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                       Grid.Column="4" Grid.ColumnSpan="1"
                       Grid.Row="21" Grid.RowSpan="2"
                       Content="SAVE"
                        BorderBrush="CadetBlue"
                        BorderThickness="2" Click="Button_Click_1"
                       />
                    <Label
                        Grid.Row="24"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Grid.RowSpan="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="Remember to save the license inside the settings/ directory"/>
                    <ui:Card x:Name="OutputCard" Grid.Row="0" Grid.Column="3"
                             Grid.RowSpan="20" Grid.ColumnSpan="3"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             VerticalContentAlignment="Top"
                             HorizontalContentAlignment="Center"
                             Margin="5"
                             BorderBrush="CadetBlue"
                             BorderThickness="1">

                        <!-- Add a Grid or StackPanel inside the Card for layout -->
                        <Grid>
                            <TextBlock x:Name="OutputText"
                               TextWrapping="Wrap"
                               TextAlignment="Left"
                               Margin="5"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"/>
                        </Grid>

                    </ui:Card>

                </Grid>
            </Border>
        </Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.ColumnSpan="10"
           HorizontalAlignment="Stretch"
           TextAlignment="Center"
           VerticalAlignment="Center">
            <Run Foreground="White" Text="Made by Offensive Security - " />
            <Hyperlink Foreground="White" NavigateUri="https://offsec.com" RequestNavigate="Hyperlink_RequestNavigate">
                <Run Text="https://offsec.com " />
            </Hyperlink>
            <Run Text=" - " />
            </TextBlock>

        </Grid>
    </StackPanel>
</ui:FluentWindow>
